{ pkgs, config, systemSettings, userSettings, ...}:

{
  programs.lf = {
    enable = true;
    commands = {
      dragonout = ''${pkgs.xdragon}/bin/dragon-drop -a -x "$fx"'';
      mkdir = ''
      {{
        printf "Directory Name: "
        read DIR
        mkdir $DIR
      }}
      '';
    };

    keybindings = {

      o = ":quit";
      c = "mkdir";
      "." = "set hidden!";
      "<enter>" = "open";  
      "g~" = "cd";
      "g/" = "/";
      e = "edit";
      
      ### bookmark configuration ###
      "'" = "mark-load";
      "\"" = "mark-remove";
      m = "mark-save";


      # ...
    };
      settings = {
      preview = true;
      hidden = true;
      drawbox = true;
      icons = true;
      ignorecase = true;
    };
  };
}
